// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  email         String         @unique
  name          String
  password      String
  role          Roles          @default(Student)
  courses       Course[]
  comments      Comment[]
  Enrollment    Enrollment[]
  notifications Notification[]
  status        Status         @default(Online)
  Mensagem      Mensagem[]

  @@map("Users")
}

model Chat {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  mensagems Mensagem[]
  users     Json[]       

  @@map("Chats")
}

model Course {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  User        User?        @relation(fields: [userId], references: [id])
  userId      String?      @db.ObjectId
  lessons     Lesson[]
  Enrollment  Enrollment[]
  Progress    Progress[]
  Section     Section[]

  @@map("Courses")
}

model Lesson {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  Course      Course?    @relation(fields: [courseId], references: [id])
  courseId    String?    @db.ObjectId
  comment     Comment[]
  duration    Int
  order       Int
  Progress    Progress[]

  @@map("Lessons")
}

model Comment {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  text     String
  Lesson   Lesson? @relation(fields: [lessonId], references: [id])
  lessonId String? @db.ObjectId
  User     User?   @relation(fields: [userId], references: [id])
  userId   String? @db.ObjectId

  @@map("Comments")
}

model Enrollment {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  course   Course     @relation(fields: [courseId], references: [id])
  courseId String     @db.ObjectId
  user     User       @relation(fields: [userId], references: [id])
  userId   String     @db.ObjectId
  progress Progress[]
  Section  Section[]

  @@map("Enrollments")
}

model Section {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  course       Course     @relation(fields: [courseId], references: [id])
  courseId     String     @db.ObjectId
  enrollment   Enrollment @relation(fields: [enrollmentId], references: [id])
  enrollmentId String     @db.ObjectId
  title        String
  duration     Int

  @@map("Sections")
}

model Progress {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  Enrollment   Enrollment? @relation(fields: [enrollmentId], references: [id])
  enrollmentId String?     @db.ObjectId
  lesson       Lesson      @relation(fields: [lessonId], references: [id])
  lessonId     String      @db.ObjectId
  course       Course      @relation(fields: [courseId], references: [id])
  courseId     String      @db.ObjectId
  completed    Boolean
}

model Notification {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  title  String
  text   String
  User   User?   @relation(fields: [userId], references: [id])
  userId String? @db.ObjectId

  @@map("Notifications")
}

model Mensagem {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  date   DateTime @default(now())
  text   String
  order  Int
  Chat   Chat?    @relation(fields: [chatId], references: [id])
  chatId String?  @db.ObjectId
  status String
  user   User     @relation(fields: [userId], references: [id])
  userId String   @db.ObjectId

  @@map("Mensagems")
}

enum Roles {
  Teacher
  Student
}

enum Status {
  Online
  Offline
}
